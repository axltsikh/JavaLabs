<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TaskFragment">
    <data>
        <variable
            name="Task"
            type="com.example.fivelab.Task" />
    </data>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <EditText
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/NameDetails"
            />
        <EditText
            android:id="@+id/DescriptionDetails"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
        <Spinner
            android:id="@+id/ComplexitySpinnerDetails"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"

            />
        <Spinner
            android:id="@+id/UrgencySpinnerDetails"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            />
        <CalendarView
            android:id="@+id/DeadLineTask"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="290dp"
            android:calendarViewShown="false"
            />
        <ImageView
            android:id="@+id/PhotoTask"
            android:layout_gravity="center"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="15dp"
            />
        <CheckBox
            android:id="@+id/FavoriteDetail"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Избранное"
            />
        <Button
            android:id="@+id/ChangeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Change"
            />
    </LinearLayout>
</layout>