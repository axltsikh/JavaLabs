<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addFragment">
    <data>
        <variable
            name="Task"
            type="com.example.fivelab.Task" />

    </data>
        <LinearLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <EditText
                android:layout_gravity="center_horizontal"
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="200dp"
                android:hint="@string/Name"
                android:text="@={Task.Name}"
                android:layout_marginStart="15dp" />
            <EditText
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:width="200dp"
                android:id="@+id/Description"
                android:text="@={Task.Description}"
                android:hint="@string/Desciption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ComplexityTextView"
                android:text="@string/Complexity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Spinner
                android:layout_marginStart="15dp"
                android:selectedItemPosition="@={Task.ComplexityPosition}"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ComplexitySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                />
            <TextView
                android:layout_margin="15dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/UrgencyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Urgency"
                />
            <Spinner
                android:layout_marginStart="15dp"
                android:selectedItemPosition="@={Task.UrgencyPosition}"
                android:layout_gravity="center_horizontal"
                android:id="@+id/UrgencySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                />
            </LinearLayout>
            <CalendarView
                android:layout_gravity="center_horizontal"
                android:id="@+id/Deadline"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <Button
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:id="@+id/PhotoButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/Photo" />
                <CheckBox
                    android:id="@+id/Favorite"
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Избранное"
                    />
            <Button
                android:onClick="AddButtonOnClick"
                android:id="@+id/SaveButton"
                android:layout_marginTop="25dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="@string/add" />
            </LinearLayout>
        </LinearLayout>
</layout>